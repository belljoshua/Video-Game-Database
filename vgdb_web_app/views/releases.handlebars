<html>
  <div class="bodydiv">
    <form id="search_releases" action="" method="" onsubmit="return false">
        <input id="release_search" type="text" placeholder="Enter Search..." name="release_search">
        <select id="releaselist" name="releaselist" form="search_releases">
          <option value="all">All</option>
          <option value="title">Title</option>
          <option value="release_date">Release Date (January 1, 1991)</option>
          <option value="region">Region</option>
          <option value="platform">Platform</option>
          <option value="age_rating">Age Rating</option>
        </select>
        <input type="submit" value="Search" onclick="searchReleases()">
    </form>

    <br>

    <table style="border: 1px solid black">
        <thead>
            <tr style="border: 1px solid black">
                <th style="border: 1px solid black">Title</th>
                <th style="border: 1px solid black">Release Date</th>
                <th style="border: 1px solid black">Region</th>
                <th style="border: 1px solid black">Platform</th>
                <th style="border: 1px solid black">Age Rating</th>
            </tr>
        </thead>
        <tbody>
            {{#each game}}
            <tr style="border: 1px solid black">
                <td style="border: 1px solid black">{{Title}}</td>
                <td style="border: 1px solid black">{{Release_Date}}</td>
                <td style="border: 1px solid black">{{Region}}</td>
                <td style="border: 1px solid black">{{Platform}}</td>
                <td style="border: 1px solid black">{{Age_Rating}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>

